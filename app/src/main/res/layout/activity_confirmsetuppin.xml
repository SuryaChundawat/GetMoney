<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.6"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Confirm 4 digit PIN"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/txt_pintitile"
            android:textSize="@dimen/textsizephonenumber"
            android:gravity="center"

            />

        <!--<android.support.v7.widget.AppCompatImageButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/imagebtnnext"
            android:background="@drawable/nevigationright"


            />-->


    </LinearLayout>



    <!-- <EditText
         android:id="@+id/password_field"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="8dp"
         android:background="#eeeeee"
         android:enabled="false"
         android:minHeight="48dp"
         android:paddingLeft="8dp"
         android:paddingRight="8dp"
         android:singleLine="true"
         android:textAppearance="?android:attr/textAppearanceMedium"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_weight="1.4"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">



            <advice_natio.project.com.getmoney.BaseActivity.PinEntryEditText
                android:background="@null"
                android:id="@+id/password_field"
                android:layout_width="112dp"
                android:layout_height="16dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:layout_marginTop="32dp"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@android:color/transparent"
                android:textIsSelectable="false"
                android:textSize="0px"
                android:visibility="visible"
                app:pinBackgroundDrawable="@drawable/bg_pin_round"
                app:pinCharacterSpacing="8dp"
                app:pinLineColors="@color/pin_line_colors"
                app:pinBackgroundIsSquare="true"
                app:pinTextBottomPadding="4dp" />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >


        <advice_natio.project.com.getmoney.Keyboard.KeyboardViewNumber
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:focusableInTouchMode="true"
            android:background="#f5f5f5"
            android:keyBackground="@drawable/push_keyboard_btn"
            android:keyTextSize="20dp"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="0.0"
            android:keyTextColor="#000000"
            android:visibility="visible"
            />






    </LinearLayout>
</LinearLayout>