                    <TextView
                        android:id="@+id/txtAddNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/upload_checkpic"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />-->






                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:id="@+id/relative"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/flexible.example.cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:contentPaddingBottom="10dp"
                    app:contentPaddingLeft="10dp"
                    app:contentPaddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <ProgressBar
                            android:id="@+id/progressBarToolbar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:visibility="visible" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="30dp"
                        android:padding="@dimen/activity_horizontal_margin">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorGreyText"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <TextView
                                android:id="@+id/edtcountrycode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/countrycode"
                                android:lines="1"
                                android:textSize="@dimen/textsizeotpscreen"
                                android:textStyle="bold"
                                android:textColorHint="@color/black"
                                android:background="?attr/editTextBackground"

                                android:textAppearance="?android:attr/textAppearanceMediumInverse"

                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/colorGreyText"
                            android:layout_marginTop="10dp"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtmobileotp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/otp_enterphone"
                                android:textSize="@dimen/textsizephonenumber"
                                android:inputType="number"
                                android:maxLength="10"
                                android:lines="1"
                                android:textColorHint="@color/colorGreyText" />

                        </android.support.design.widget.TextInputLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/notificationmessage"
                            android:lines="1"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="@dimen/login_text_size"
                            android:textStyle="bold"
                            android:textColorHint="@color/colorGreyText"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                            />


                        <!--<android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/colorGreyText"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtbankbanch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/bank_branch"
                                android:textSize="@dimen/login_text_size"
                                android:textColorHint="@color/colorGreyText"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_input_product_price"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/colorGreyText"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtifsccode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/ifsccode"
                                android:inputType="number"
                                android:textSize="@dimen/login_text_size"
                                android:textColorHint="@color/colorGreyText" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/colorGreyText"
                            tools:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                            <EditText
                                android:id="@+id/edtmicrnumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/micr_number"
                                android:inputType="number"
                                android:textSize="@dimen/login_text_size"
                                android:textColorHint="@color/colorGreyText" />

                        </android.support.design.widget.TextInputLayout>
-->

                        <!--<RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btnSubmit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
