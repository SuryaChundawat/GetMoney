                    </LinearLayout>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Week "
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/divider"
                        android:layout_marginRight="10dp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:id="@+id/divider"
                        android:layout_height="35dp"
                        android:background="@color/light"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.4"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year : 2017"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/divider"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        />


                </RelativeLayout>



            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <advice_natio.project.com.getmoney.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@color/colorPrimary"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:paddingBottom="25dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.project.nat.test.ScrollingActivity"
        android:gravity="center_horizontal"
        >


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/money_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="Buy More"
                        android:textColor="@color/light" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/border">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/extension_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="In-Cash"
                        android:textColor="@color/light" />
                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txtdash_available_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Available points"
                android:textSize="@dimen/available_pointssize"
                android:textStyle="bold" />


